{
  "buildCommand": "bun run build",
  "installCommand": "bun install --frozen-lockfile",
  "framework": "vite",
  "nodeVersion": "20.x",
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "VITE_BUILD_TIME": "@now"
    }
  },
  "rewrites": [
    {
      "source": "/((?!.*\\..*).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "outputDirectory": "dist"
}
